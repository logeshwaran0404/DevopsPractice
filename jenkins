pipeline {
    agent any
    
    tools {
        maven 'Maven 3'
        jdk 'JDK 17'
    }
    
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        
        stage('Build') {
            steps {
                sh 'mvn clean package'
                archiveArtifacts artifacts: 'target/*.jar', fingerprint: true
            }
        }
        
        stage('Test') {
            steps {
                sh 'mvn test'
                junit '**/target/surefire-reports/TEST-*.xml'
            }
        }
        
        stage('Deploy') {
            steps {
                sh '''
                    # Deployment commands here
                '''
            }
        }
    }
    
    post {
        failure {
            script {
                // Get commit author email from Git
                def commitEmail = sh(script: 'git log -1 --pretty=format:%ae', returnStdout: true).trim()
                
                // Send email regardless of user registration status
                emailext (
                    subject: "BUILD FAILED: ${currentBuild.fullDisplayName}",
                    body: """
                        <p>BUILD FAILED: ${currentBuild.fullDisplayName}</p>
                        <p>SCM checkout or build process failed</p>
                        <p>Check the console output at: ${env.BUILD_URL}console</p>
                        <p>Failed Stage: ${currentBuild.result}</p>
                    """,
                    to: "${commitEmail}, logeshwaran7129@gmail.com",
                    mimeType: 'text/html'
                )
            }
        }
        always {
            cleanWs()
        }
    }
}